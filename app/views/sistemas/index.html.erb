<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-body">
    <%= link_to 'Novo', new_sistema_path, class:"btn btn-primary active" %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de Sistemas</h3>
  </div>
  <div class="panel-body">
    <table class="table table-responsive table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Sigla</th>
          <th>Ações</th>
        </tr>
      </thead>
    
      <tbody>
        <% @sistemas.each do |sistema| %>
          <tr>
            <td><%= sistema.nome %></td>
            <td><%= sistema.sigla %></td>
            <td>
              <%= link_to 'Visualizar', sistema, class:"btn btn-success active" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
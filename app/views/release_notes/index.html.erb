<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-body">
    <%= link_to 'Nova', new_release_note_path, class:"btn btn-primary active" %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de Release Notes</h3>
  </div>
  <div class="panel-body">
    <table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>Sistema</th>
      <th>Contexto</th>
      <th>Ação</th>
    </tr>
  </thead>

  <tbody>
    <% @release_notes.each do |release_note| %>
      <tr>
        <td><%= release_note.sistema.nome %></td>
        <td><%= release_note.contexto %></td>
        <td>
          <%= link_to 'Visualizar', release_note, class:"btn btn-success active" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
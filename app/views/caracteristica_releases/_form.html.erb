<% provide(:template, "admin" ) %>

<%= form_for(@caracteristica_release) do |f| %>
  
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Caracteritica</h3>
  </div>
  <div class="panel-body">
    <div class="conteiner">
      <div class="field">
        <%= f.label :release_note_id %><br>
        <output type="text" class="form-control" id="nome" ><%= @release_note.sistema.nome %></output>
        <%= f.hidden_field :release_note_id, :value => @release_note.id %>
      </div>
      <div class="form-group">
        <%= f.label :caracteristica_id %><br>
        <%= f.collection_select :caracteristica_id, @caracteristicas, :id, :nome , {}, class:"form-control" %>
      </div>
      <div class="field">
        <%= f.label :descricao %><br>
        <%= f.text_area :descricao, class:"form-control" %>
      </div>
      <div class="field">
        <%= f.label :status %><br>
        <%= f.check_box :status %> 
      </div>
    </div>
  </div>
</div>
<div class="actions">
  <%= f.submit "Salvar", class:"btn btn-primary" %>
  <%= link_to 'Voltar', edit_release_note_path(@release_note, tab:"caracteristicas"), class:"btn btn-info active" %>
</div>
<% end %>

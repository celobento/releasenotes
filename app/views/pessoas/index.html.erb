<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-body">
    <%= link_to 'Nova', new_pessoa_path, class:"btn btn-primary active" %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de Pessoas</h3>
  </div>
  <div class="panel-body">
    <table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Matricula</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.email %></td>
        <td><%= pessoa.matricula %></td>
        <td>
          <%= link_to 'Visualizar', pessoa, class:"btn btn-success active" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
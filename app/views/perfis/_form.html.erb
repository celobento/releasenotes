
<% provide(:title, "#{texto_da_acao} Perfil" ) %>

<% provide(:template, "admin" ) %>

<%= form_for(@perfil) do |f| %>

<style>
  .button-modal{
    padding: 10px 0px;
  }
</style>

<div class="card card-default">
  <div class="card-header bordered">
    <div class="header-block">
      <h3 class="title">Sistema</h3>
    </div>
  </div>
  <div class="card-block">

  <div class="form-group">
    <%= f.label :nome %><br>
    <%= f.text_field :nome, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :role %><br>
    <%= f.text_field :role, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :descrcicao %><br>
    <%= f.text_area :descrcicao, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :status %><br>
    <%= f.check_box :status %>
  </div>
  
       </div>
   <div class="card-footer">
    <div class="row">
      <div class="col">
       <%= f.submit texto_da_acao, class:"btn btn-primary" %>
        <%= link_to 'Voltar', perfis_path, class:"btn btn-info active" %>
        <% if @perfil.new_record? == false %>
          <%= link_to 'Deletar', @perfil, method: :delete, data: { confirm: 'Tem Certeza?' }, class:"btn btn-danger active" %>
        <% end %>
        <!--%= button_tag(type: 'submit', class: "btn btn-primary") do %>
         <i class="glyphicon glyphicon-ok"></i> Criar
        < end %-->
      </div>
      
    </div>
  </div>
</div>
<% end %>

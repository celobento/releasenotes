<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-body">
    <%= link_to 'Novo', new_caracteristica_path, class:"btn btn-primary active" %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de Caracteristicas</h3>
  </div>
  <div class="panel-body">
    <table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @caracteristicas.each do |caracteristica| %>
      <tr>
        <td><%= caracteristica.nome %></td>
        <td>
          <%= link_to 'Visualizar', caracteristica, class:"btn btn-success active" %>
        </td>
      </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>